{
    "name": "Post.news Dark Mode",
    "author": "Joshua Spires",
    "description": "Turn the lights off while using Post.news",
    "version": "1.2.8",
    "manifest_version": 3,
    "icons": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "96": "icons/96.png",
      "128": "icons/128.png",
      "256": "icons/256.png"
   },
    "action": {
      "default_icon": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "96": "icons/96.png",
        "128": "icons/128.png",
        "256": "icons/256.png"
      },
      "default_title": "Post.news Dark Mode"
    },
    "content_scripts": [{
        "js": ["scripts/script.js"],
        "matches": ["*://post.news/*"],
        "all_frames": true
      }]  
}
